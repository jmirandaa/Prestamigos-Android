<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
    android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
    android:layout_marginLeft="@dimen/paddin_borde_tarjeta"
    android:layout_marginRight="@dimen/paddin_borde_tarjeta">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:srcCompat="@drawable/default_profile_small"
        android:id="@+id/imageAmigo"
        android:layout_weight="1"
        android:contentDescription="@string/campo_nombre" />

    <TextView
        android:text="@string/tarjeta_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amigos_nombre_amigo"
        android:layout_weight="1"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:layout_gravity="center_vertical"
        android:textAlignment="gravity"
        android:textSize="@dimen/tam_nombre" />

</LinearLayout>